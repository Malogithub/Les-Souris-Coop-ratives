package Grille;

import javax.swing.ImageIcon;

import Grille.Ground;


public class Bordure extends Ground{

	//Constructeur bordure
	
	public Bordure(int abscisse, int ordonne) {
		super(abscisse, ordonne);
		
		ImageIcon img = new ImageIcon(getClass().getResource("/images/noir.jpg"));
		image = img.getImage();
	}
	
	@Override
	public boolean isGrass() {
		return false;
	}
	@Override
	public boolean isNourriture() {
		return false;
	}
	
	public boolean isBordure() {
		return true;
	}
	
	@Override
	public boolean isObstacle() {
		return false;
	}
	@Override
	public int getQuantity() {
		return 0;
	}

	@Override
	public boolean setQuantity() {
		return false;
	}

	@Override
	public void setQuantity(int quantity) {
		
	}
}
